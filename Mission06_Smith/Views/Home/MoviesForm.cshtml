@model Movies

<form method="post">
    <!-- Dropdown for selecting movie category -->
    <label asp-for="Category">Category:</label>
    <select asp-for="Category">
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select>
    <br><br>

    <!-- Input for movie title -->
    <label asp-for="Title">Please enter the title</label>
    <input asp-for="Title" type="text">
    <br><br>

    <!-- Input for movie release year -->
    <label asp-for="Year">Please enter the Year:</label>
    <input asp-for="Year" type="number">
    <br><br>

    <!-- Input for director's name -->
    <label asp-for="Director">Director's Name</label>
    <input asp-for="Director" type="text">
    <br><br>

    <!-- Dropdown for selecting movie rating -->
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" name="rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br><br>

    <!-- Dropdown for specifying if the movie has been edited -->
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited" name="yesNo">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br><br>

    <!-- Input for person movie was lent to -->
    <label asp-for="LentTo">Lent to who?</label>
    <input asp-for="LentTo" type="text">
    <br><br>

    <!-- Input for additional notes about the movie -->
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" type="text">
    <br><br>

    <!-- Submit button for form -->
    <button type="submit">Submit the Movie</button>
</form>
